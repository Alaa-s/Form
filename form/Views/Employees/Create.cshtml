@model form.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="gender">Male</label>
                <input type="radio" name="gender" value="male" >
                <span asp-validation-for=gender></span>
            </div>
            <div class="form-group">
                <label asp-for="gender">Femail</label>
                <input type="radio" name="gender" value="female" >
                <span asp-validation-for=gender></span>
            </div>
            <div class="form-group">
                <label for="cars">Country</label>

                <select asp-for="Country" class="form-control">
                    <option>Albania</option>
                    <option>Angola</option>
                    <option>Bahrain</option>
                    <option>Belize</option>
                    <option>Canada</option>
                    <option>Chad</option>
                    <option>Egypt</option>
                    <option>Eritrea</option>
                    <option>Eswatini</option>
                </select>
            </div>
            <div class="form-group" >
                <label for="cars">City</label>
                <select asp-for="City" class="form-control">
                    <option>10th of Ramadan</option>
                    <option>6th of October</option>
                    <option>Alexandria</option>
                    <option>Awsim</option>
                    <option>Aswan</option>
                    <option>Badr</option>
                    <option>Cairo</option>
                    <option>Dahab</option>
                    <option>Fayed</option>
                    <option>Giza</option>
                    <option>Hurghada</option>
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
